generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model HealthCheck {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
}

model FitbitAuth {
  id           String   @id @default(cuid())
  userId       String   @unique
  fitbitUserId String
  scope        String
  accessToken  String
  refreshToken String
  expiresAt    DateTime
  lastSyncedAt DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model FitbitWorkout {
  id           String   @id @default(cuid())
  userId       String
  fitbitLogId  String   @unique
  startTime    DateTime
  durationMs   Int
  activityName String
  category     String?
  isTraining   Boolean?
  calories     Float?
  steps        Int?
  distance     Float?
  rawJson      Json
  createdAt    DateTime @default(now())
}

model FitbitDaily {
  id            String   @id @default(cuid())
  userId        String
  date          DateTime
  steps         Int?
  activeMinutes Int?
  rawJson       Json
  createdAt     DateTime @default(now())

  @@unique([userId, date])
}

model Reminder {
  id         String   @id @default(cuid())
  subjectKey String
  kind       String
  status     String
  reason     String?
  message    String?
  dayKey     String
  createdAt  DateTime @default(now())

  @@index([subjectKey])
  @@unique([subjectKey, kind, dayKey])
}
model FitbitSyncState {
  id          String   @id @default(cuid())
  userId      String   @unique
  lastSyncedAt DateTime?
  updatedAt   DateTime @updatedAt
}
model SyncRun {
  id     String   @id @default(cuid())
  userId String
  ranAt  DateTime @default(now())

  @@index([userId, ranAt])
}
